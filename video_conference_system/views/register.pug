html
    include ../includes/header
    body
        include ../includes/navbar
        section(id="register-section")
            h1 Register
            form(action="/register" method="post")
                div.form-group
                    label Username
                    input.form-control(type="text" name="username")
                div.form-group
                    label Password
                    input.form-control(type="password" name="password")
                div.form-group
                    label Confirm Password
                    input.form-control(type="password" name="confirm")
                button.btn.btn-success.btn-lg Register Now
                a.btn.btn-primary.btn-lg.mt-1(href="/Login") Login
            

                